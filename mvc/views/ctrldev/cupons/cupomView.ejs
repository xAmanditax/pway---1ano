<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alterar Cupom</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body>
    <main>
        <section id="cupomView">
            <h2>Alterar Cupons</h2>
            <form action="" id="enviarAtualizacao">
                <input aria-hidden="true" type="hidden" name="id" id="id" value="<%= r.id %>">
                <div class="row">
                    <div class="col">
                        <label for="txtnomecupom" class="form-label">Nome do atrativo</label>
                        <input type="text" value="<%= r.nome %>" name="txtnomecupom" id="txtnomecupom" class="form-control" tabindex="1">
                    </div>
                    <div class="col">
                        <label for="txtcodcupom" class="form-label">CÃ³digo</label>
                        <input type="text" value="<%= r.codigo %>" name="txtcodcupom" id="txtcodcupom" class="form-control" tabindex="2">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for="txtvalicupom" class="form-label">Validade</label>
                        <input type="text" value="<%= r.validade %>" name="txtvalicupom" id="txtvalicupom" class="form-control" tabindex="3" >
                    </div>
                    <div class="col">
                        <label for="txtvalocupom" class="form=label">Valor</label>
                        <input type="text" value="<%= r.valor %>" name="txtvalocupom" id="txtvalocupom" class="form-control" tabindex="4">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <input type="submit" value="Alterar" id="btAlter" name="bAlter" class="btn btn-warning mt-4" tabindex="5">
                    </div>
                </div>
            </form>
    </section>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
     document.getElementById('enviarAtualizacao').addEventListener('submit', (e) => {
         e.preventDefault()
         enviar()
     })

     async function enviar(){
         const id= document.getElementById('id').value
         const nome= document.getElementById('txtnomecupom').value
         const codigo = document.getElementById('txtcodcupom').value
         const validade = document.getElementById('txtvalicupom').value
         const valor= document.getElementById('txtvalocupom').value
        

         const data = {
             'nome': nome,
             'codigo': codigo,
             'validade': validade,
             'valor': valor,
             'id': id
     }

     const dados = await fetch ('/cupom/'+id, {
         method: 'PUT',
         headers: {
             'Accept': 'application/json',
             'Content-Type': 'application/json'
         },

         body: JSON.stringify(data)
     })

     const json = await dados.json()
     let cupons = await json

     alert(cupons.msg)
 }
    </script>

</body>
</html>