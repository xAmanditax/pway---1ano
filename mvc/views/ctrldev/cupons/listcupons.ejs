      </header>
      <main>
        <h2>Listando Cupons</h2>
        <div class="row">
            <button class="btn btn-warning"><a href="/pagina/addcupom" class="btn">Adicionar Cupons</a></button>
        </div>
        <section class="listar border border-warning m-4" id="lista-cupons">
          <div class="row m-3 border p-2 text-start border-danger">
            <div class="col border-end border-warning">Nome</div>
            <div class="col border-end border-warning">Código</div>
            <div class="col border-end border-warning">Validade</div>
            <div class="col border-end border-warning">Valor</div>
            <div class="col border-end border-warning text-center">Atualizar</div>
            <div class="col text-center">Deletar</div>
            </div>
            <% for(let cupom of lista_cupons){ %>
              <div class="row m-3 border p-2 text-start border-danger">
                <div class="col border-end border-warning"> <%= cupom.nome  %> </div>
                <div class="col border-end border-warning"><%= cupom.codigo  %></div>
                <div class="col border-end border-warning"><%= cupom.validade  %></div>
                <div class="col border-end border-warning"><%= cupom.valor  %></div>
                <div class="col border-end border-warning text-center">
                  <button class="btn bg-success" value="<%= cupom.id  %> " onclick="irPaginaAtualizacao('<%= cupom.id  %>')">
                    <i class="bi bi-cloud-plus"></i>Update
                  </button>
                </div>
                <div class="col text-center"><button value="<%= cupom.id  %> " onclick="deletarCupom('<%= cupom.id  %>')" class="btn bg-danger"><i class="bi bi-trash3"></i>Delete</button></div>
              </div>
            <% } %>
          </section>
          </main>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        
      
        <script>
          function irPaginaAtualizacao(id){
            location.href = `/pag/alteracupom/${id}`
          }
      
          async function deletarCupom(id){
            
            const dados = await fetch ('/cupom/'+id, {method: 'DELETE'})
            const json = await dados.json()
            let cupons = await json
            location.reload()
          }
        </script>



</body>
